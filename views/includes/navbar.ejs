<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn-mobile {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.3rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 2rem 0.5rem 2rem;
    width: 500px;
  }

  #brand-logo {
    font-family: "Trade Winds", system-ui;
    font-size: 1.8rem;
    color: #fe424d;
    margin: 0.5rem;
    margin-right: 0.8rem;
    text-decoration: none;
  }

  .nav-link {
    margin-left: 0.5rem;
  }
</style>


<nav class="navbar bg-body-light border-bottom sticky-top" id="customNavbar">
  <div class="container-fluid">
    <a id="brand-logo" class="navbar-brand" href="/listings">BikeBuddy</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav w-100 flex-column flex-md-row justify-content-between align-items-md-center">
        <!-- Left -->
        <div class="d-none d-md-flex align-items-center m-3">
          <a class="nav-link" href="/listings"><b>Explore Vehicles</b></a>
        </div>

        <!-- Center -->
        <div class="d-none d-md-flex mx-md-auto">
          <form class="d-flex" role="search" action="/listings/search" method="GET">
            <input class="form-control me-2 search-inp" name="q" type="search" placeholder="Search vehicles" />
            <button class="btn search-btn" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
          </form>
        </div>

        <!-- Right -->
        <div class="d-none d-md-flex align-items-center gap-3">
          <% if (!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } else { %>
            <% if (currUser && currUser.username) { %>
              <span class="nav-link disabled">
                <b><i class="fa-solid fa-user"></i> &nbsp; <%= currUser.username.toUpperCase() %></b>
              </span>
            <% } %>
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>

        <!-- Mobile -->
        <div class="d-md-none">
          <form class="search-mobile" role="search" action="/listings/search" method="GET">
            <input class="form-control search-inp" name="q" type="search" placeholder="Search vehicles" />
            <button class="btn search-btn-mobile" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
          </form>

          <a class="nav-link" href="/listings"><b>Explore Vehicles</b></a>

          <% if (!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } else { %>
            <% if (currUser && currUser.username) { %>
              <span class="nav-link disabled">
                <b><i class="fa-solid fa-user"></i> &nbsp; <%= currUser.username.toUpperCase() %></b>
              </span>
            <% } %>
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>


<style>
  /* C  ollapsed navbar below 1125px */
  @media (max-width: 1124.98px) {
    #customNavbar .navbar-collapse {
      background-color: #f8f9fa;
      padding: 1rem;
      border-radius: 0 0 8px 8px;
    }

    #customNavbar .navbar-nav {
      flex-direction: column !important;
      align-items: stretch;
    }

    #customNavbar .navbar-toggler {
      display: block;
    }

    #customNavbar .nav-link {
      padding: 0.75rem 1rem;
      text-align: center;
    }

    .search-mobile {
      margin: 10px 0;
    }

    .search-mobile input,
    .search-mobile button {
      width: 100%;
      margin-bottom: 8px;
    } 

    #customNavbar .d-md-flex {
      display: none !important;
    }

    #customNavbar .d-md-none {
      display: block !important;
    }
  }

  /* Expanded navbar at >= 1125px */
  @media (min-width: 1125px) {
    #customNavbar .navbar-collapse {
      display: flex !important;
      flex-basis: auto !important;
    }

    #customNavbar .navbar-nav {
      flex-direction: row !important;
      align-items: center;
    }

    #customNavbar .navbar-toggler {
      display: none;
    }

    #customNavbar .d-md-none {
      display: none !important;
    }

    #customNavbar .d-md-flex {
      display: flex !important;
    }
  }
</style>
