<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-md-6 offset-md-3">
            <h1 class="mb-4">Login</h1>
            <form action="/login" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="text" name="username" class="form-control w-100" id="username" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control w-100" id="password" required>
                </div>
                <button class="btn btn-success w-100">Login</button>
            </form>
        </div>
    </div>
</body>
